<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/custom_gradient_background"
        android:paddingLeft="@dimen/padding_large">

        <TextView
            android:id="@+id/tvHello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello! PT Idea Kolaborasi Utama,"
            android:fontFamily="@font/font_montserrat_medium"
            android:paddingBottom="4dp"
            android:textSize="@dimen/font_size_medium"
            android:layout_marginTop="48dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvFind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHello"
            android:text="Find a Toptalent here"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_centerHorizontal="true"
        android:layout_height="140dp"
        android:layout_marginTop="130dp"
        android:padding="@dimen/padding_medium"
        android:background="@drawable/custom_gradient_radius">
        <TextView
            android:id="@+id/tvPost"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:text="Post your job on our website for head hunter!"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/ivPost"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginLeft="28dp"
            android:src="@drawable/home_image"
            android:layout_toEndOf="@id/tvPost"/>
    </RelativeLayout>


</RelativeLayout>